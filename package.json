{
  "name": "album-scrobbler",
  "version": "1.0.0",
  "description": "Whether you want to scrobble your vinyl records you listen to on last.fm, or you want a quick way to manually scrobble, Album Scrobbler is a desktop app for you.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Connell Hagen",
  "license": "MIT",
  "build": {
    "appId": "connellhagen.albumscrobbler",
    "productName": "Album Scrobbler",
    "icon": "build/icon",
    "files": [
      "**/*",
      "!node_modules/*/{test,__tests__,examples,docs}/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "electron": "^31.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@emnapi/runtime": "^1.4.5",
    "db-migrate": "^0.11.14",
    "db-migrate-sqlite3": "^1.0.2",
    "disconnect": "^1.2.2",
    "electron-squirrel-startup": "^1.0.1",
    "keytar": "^7.9.0",
    "sharp": "^0.33.5",
    "sql.js": "^1.11.0"
  }
}
